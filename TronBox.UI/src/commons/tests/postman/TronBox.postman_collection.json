	"event": [
		{
			"listen": "prerequest",
			"script": {
				"id": "e7ca4e48-14e3-4c0c-81d1-a420d548401e",
				"type": "text/javascript",
				"exec": [
					"const accessToken = pm.environment.get(\"accessToken\");",
					"const accessExpires = pm.environment.get(\"accessExpires\");",
					"",
					"if ((!accessToken) || (accessExpires <= _.now())) {",
					"    console.log(\"Access token invalid!\");",
					"    console.log(\"Attempting to refresh..\", pm.variables.get(\"authUrl\"));",
					"    ",
					"    const refreshTokenRequest = {",
					"        url: pm.variables.get(\"authUrl\"),",
					"        method: 'POST',",
					"    \theader: [{",
					"    \t\tkey: 'Content-type',",
					"    \t\tvalue: 'application/json'",
					"    \t}],",
					"        body: {",
					"            mode: 'raw',",
					"            raw: JSON.stringify({",
					"                \"usuario\": pm.variables.get(\"authLogin\"),",
					"                \"senha\": pm.variables.get(\"authPassword\")",
					"            })",
					"        }",
					"    };",
					"    ",
					"    pm.sendRequest(refreshTokenRequest, function (err, res) {",
					"        if(err){",
					"            console.log(\"Refresh request failed:\");",
					"            console.log(err);",
					"            return;",
					"        }",
					"      ",
					"        console.log(\"Refresh request succeeded!\");",
					"        console.log(\"Updating environment variables..\");",
					"        ",
					"        const response = res.json();",
					"        ",
					"        var expiryDate = new Date(_.now() + (24 * 60 * 60 * 1000));",
					"",
					"        pm.environment.set(\"accessToken\", response.token);",
					"        pm.environment.set(\"accessExpires\", expiryDate.getTime());",
					"        // pm.environment.set(\"tenant\", response.tenants[0].tenantId);",
					"    });",
					"",
					"}"
				]
			}
		},
